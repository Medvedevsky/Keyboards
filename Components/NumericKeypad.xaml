<UserControl x:Class="WpfApp.Components.NumericKeypad"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp.Components"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


        <Button Grid.Column="0" Grid.Row="0"  Margin="3" Click="Button_Click_Key" >
            <Viewbox Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="1"/>
            </Viewbox>
        </Button>
        <Button Grid.Column="1" Grid.Row="0" Margin="3" Click="Button_Click_Key">
            <Viewbox Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="2"/>
            </Viewbox>
        </Button>
        <Button Grid.Column="2" Grid.Row="0"  Margin="3" Click="Button_Click_Key">
            <Viewbox Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="3"/>
            </Viewbox>
        </Button>

        
        <Button Grid.Column="0" Grid.Row="1" Margin="3" Click="Button_Click_Key">
            <Viewbox Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="4"/>
            </Viewbox>
        </Button>
        <Button Grid.Column="1" Grid.Row="1" Margin="3" Click="Button_Click_Key">
            <Viewbox Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="5"/>
            </Viewbox>
        </Button>
        <Button Grid.Column="2" Grid.Row="1" Margin="3" Click="Button_Click_Key">
            <Viewbox Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="6"/>
            </Viewbox>
        </Button>


        <Button Grid.Column="0" Grid.Row="2" Margin="3" Click="Button_Click_Key">
            <Viewbox Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="7"/>
            </Viewbox>
        </Button>
        <Button Grid.Column="1" Grid.Row="2" Margin="3" Click="Button_Click_Key">
            <Viewbox Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="8"/>
            </Viewbox>
        </Button>
        <Button Grid.Column="2" Grid.Row="2" Margin="3" Click="Button_Click_Key">
            <Viewbox Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="9"/>
            </Viewbox>
        </Button>

        <Button Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" Margin="3" Click="Button_Click_Key">
            <Viewbox Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="0"/>
            </Viewbox>
        </Button>
        <Button Grid.Column="2" Grid.Row="3" Margin="3" Click="Button_Click_Delete">
            <Viewbox Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="⌫"/>
            </Viewbox>
        </Button>

        
    </Grid>
</UserControl>
