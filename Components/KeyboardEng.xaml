<UserControl x:Class="WpfApp.Components.KeyboardEng"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp.Components"
             mc:Ignorable="d" 
             x:Name="keyboardEng"
             d:DesignHeight="350" d:DesignWidth="1000">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../ResourceDictionaries/KeyboardIcons.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid x:Name="mainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Margin="3" Grid.Column="0" Click="Button_Click_Key">
                    <Viewbox  >
                        <TextBlock Text="q" Height="18" />
                    </Viewbox>
                </Button>
                <Button Margin="3" Grid.Column="1" Click="Button_Click_Key">
                    <Viewbox  >
                        <TextBlock Text="w" Height="18" />
                    </Viewbox>
                </Button>
                <Button Margin="3" Grid.Column="2" Click="Button_Click_Key">
                    <Viewbox  >
                        <TextBlock Text="e" Height="18" />
                    </Viewbox>
                </Button>
                <Button Margin="3" Grid.Column="3" Click="Button_Click_Key">
                    <Viewbox  >
                        <TextBlock Text="r" Height="18" />
                    </Viewbox>
                </Button>
                <Button Margin="3" Grid.Column="4" Click="Button_Click_Key">
                    <Viewbox  >
                        <TextBlock Text="t" Height="18" />
                    </Viewbox>
                </Button>
                <Button Margin="3" Grid.Column="5" Click="Button_Click_Key">
                    <Viewbox  >
                        <TextBlock Text="y" Height="18" />
                    </Viewbox>
                </Button>
                <Button Margin="3" Grid.Column="6" Click="Button_Click_Key">
                    <Viewbox  >
                        <TextBlock Text="u" Height="18" />
                    </Viewbox>
                </Button>
                <Button Margin="3" Grid.Column="7" Click="Button_Click_Key">
                    <Viewbox  >
                        <TextBlock Text="i" Height="18" />
                    </Viewbox>
                </Button>
                <Button Margin="3" Grid.Column="8" Click="Button_Click_Key">
                    <Viewbox  >
                        <TextBlock Text="o" Height="18" />
                    </Viewbox>
                </Button>
                <Button Margin="3" Grid.Column="9" Click="Button_Click_Key">
                    <Viewbox  >
                        <TextBlock Text="p" Height="18" />
                    </Viewbox>
                </Button>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.5*"/>
                </Grid.ColumnDefinitions>
                <Button Margin="3" Grid.Column="1" Click="Button_Click_Key">
                    <Viewbox  >
                        <TextBlock Text="a" Height="18" />
                    </Viewbox>
                </Button>
                <Button Margin="3" Grid.Column="2" Click="Button_Click_Key">
                    <Viewbox  >
                        <TextBlock Text="s" Height="18" />
                    </Viewbox>
                </Button>
                <Button Margin="3" Grid.Column="3" Click="Button_Click_Key">
                    <Viewbox  >
                        <TextBlock Text="d" Height="18" />
                    </Viewbox>
                </Button>
                <Button Margin="3" Grid.Column="4" Click="Button_Click_Key">
                    <Viewbox  >
                        <TextBlock Text="f" Height="18" />
                    </Viewbox>
                </Button>
                <Button Margin="3" Grid.Column="5" Click="Button_Click_Key">
                    <Viewbox  >
                        <TextBlock Text="g" Height="18" />
                    </Viewbox>
                </Button>
                <Button Margin="3" Grid.Column="6" Click="Button_Click_Key">
                    <Viewbox  >
                        <TextBlock Text="h" Height="18" />
                    </Viewbox>
                </Button>
                <Button Margin="3" Grid.Column="7" Click="Button_Click_Key">
                    <Viewbox  >
                        <TextBlock Text="j" Height="18" />
                    </Viewbox>
                </Button>
                <Button Margin="3" Grid.Column="8" Click="Button_Click_Key">
                    <Viewbox  >
                        <TextBlock Text="k" Height="18" />
                    </Viewbox>
                </Button>
                <Button Margin="3" Grid.Column="9" Click="Button_Click_Key">
                    <Viewbox  >
                        <TextBlock Text="l" Height="18" />
                    </Viewbox>
                </Button>
            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>
                <Button Margin="3" Grid.Column="0" Click="Button_Click_CapsLock">
                    <ContentControl Content="{StaticResource CapsLockButtonIcon}"/>
                </Button>
                <Button Margin="3" Grid.Column="1" Click="Button_Click_Key">
                    <Viewbox  >
                        <TextBlock Text="z" Height="18" />
                    </Viewbox>
                </Button>
                <Button Margin="3" Grid.Column="2" Click="Button_Click_Key">
                    <Viewbox  >
                        <TextBlock Text="x" Height="18" />
                    </Viewbox>
                </Button>
                <Button Margin="3" Grid.Column="3" Click="Button_Click_Key">
                    <Viewbox  >
                        <TextBlock Text="c" Height="18" />
                    </Viewbox>
                </Button>
                <Button Margin="3" Grid.Column="4" Click="Button_Click_Key">
                    <Viewbox  >
                        <TextBlock Text="v" Height="18" />
                    </Viewbox>
                </Button>
                <Button Margin="3" Grid.Column="5" Click="Button_Click_Key">
                    <Viewbox  >
                        <TextBlock Text="b" Height="18" />
                    </Viewbox>
                </Button>
                <Button Margin="3" Grid.Column="6" Click="Button_Click_Key">
                    <Viewbox  >
                        <TextBlock Text="n" Height="18" />
                    </Viewbox>
                </Button>
                <Button Margin="3" Grid.Column="7" Click="Button_Click_Key">
                    <Viewbox  >
                        <TextBlock Text="m" Height="18" />
                    </Viewbox>
                </Button>
                <Button Margin="3" Grid.Column="8" Click="Button_Click_Delete">
                    <ContentControl Content="{StaticResource DeleteButtonIcon}"/>
                </Button>
            </Grid>

            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>
                <Button Margin="3" Grid.Column="0" Command="{Binding SwitchToRuKeyboard, ElementName=keyboardEng}">
                    <Viewbox  >
                        <TextBlock Text="🌐" Height="18" />
                    </Viewbox>
                </Button>
                <Button Margin="3" Grid.Column="1" Click="Button_Click_Space">
                    <Viewbox  >
                        <TextBlock Text="." Height="18" />
                    </Viewbox>
                </Button>
                <Button Margin="3" Grid.Column="2" Click="Button_Click_Key">
                    <Viewbox  >
                        <TextBlock Text="␣" Height="18" />
                    </Viewbox>
                </Button>
                <Button Margin="3" Grid.Column="3" Click="Button_Click_Key">
                    <Viewbox  >
                        <TextBlock Text="@" Height="18" />
                    </Viewbox>
                </Button>
                <Button Margin="3" Grid.Column="4" Command="{Binding SwitchToSymbolKeyboard, ElementName=keyboardEng}">
                    <Viewbox  >
                        <TextBlock Text="?123" Height="18" />
                    </Viewbox>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
